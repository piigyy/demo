<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table class="table tabble-strip">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">ACTIONS</th>
    </tr>
  </thead>

  <tbody>tweets
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.title %></td>
        <td><%= tweet.description %></td>
        <td><%= link_to 'Show', tweet, class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @tweets %>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
